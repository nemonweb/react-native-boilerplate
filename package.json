{
  "name": "storybook2",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest --coverage",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "storybook": "storybook start -p 7007",
    "prestorybook": "rnstl",
    "precommit": "lint-staged",
    "android": "node node_modules/react-native/local-cli/cli.js run-android",
    "ios": "node node_modules/react-native/local-cli/cli.js run-ios"
  },
  "dependencies": {
    "react": "16.4.1",
    "react-native": "0.56.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.0.0-alpha.14",
    "@storybook/addon-links": "^4.0.0-alpha.14",
    "@storybook/addons": "^4.0.0-alpha.14",
    "@storybook/react-native": "^4.0.0-alpha.14",
    "@types/jest": "^23.3.0",
    "@types/react": "^16.4.6",
    "@types/react-native": "^0.56.3",
    "babel-core": "^7.0.0-beta.53",
    "babel-jest": "^23.4.0",
    "babel-preset-react-native": "^5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-react-16-adapter-setup": "^0.1.0",
    "enzyme-to-json": "^3.3.4",
    "husky": "^0.14.3",
    "jest": "23.4.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "react-dom": "16.4.1",
    "react-native-storybook-loader": "^1.8.0",
    "react-native-typescript-transformer": "^1.2.10",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/src/.*\\.(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "setupTestFrameworkScriptFile": "<rootDir>/setup.js",
    "cacheDirectory": ".jest/cache",
    "snapshotSerializers": ["enzyme-to-json/serializer"]
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./storybook/stories"
      ],
      "pattern": "**/*.stories.js",
      "outputFile": "./storybook/storyLoader.js"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "tslint --fix",
      "prettier",
      "git add"
    ]
  }
}
